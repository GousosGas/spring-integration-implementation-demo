<?xml version="1.0" encoding="UTF-8"?>
<beans xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans.xsd
      http://www.springframework.org/schema/integration
       http://www.springframework.org/schema/integration/spring-integration-4.2.xsd"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans">

    <!--gateway will receive a msg and pass it to the the input channel-->
    <int:gateway service-interface="com.demo.integration.demointegration.PrinterGateway"
                 default-request-channel="inputChannel"/>

    <!--Channel-->
    <int:channel id="inputChannel"/>
    <int:channel id="outputChannel"/>

    <!--Custom Filter Beans-->
    <bean id="customFilter"
          class="com.demo.integration.demointegration.CustomFIlter"/>

    <!--Filter-->
    <int:filter
        ref="customFilter"
        input-channel="inputChannel"
        output-channel="outputChannel"/>

    <!--Beans-->
    <bean id="printService"
          class="com.demo.integration.demointegration.PrintService"/>

    <!--Endpoint-->
    <int:service-activator
            ref="printService"
            method="print"
            input-channel="outputChannel"
    />
</beans>